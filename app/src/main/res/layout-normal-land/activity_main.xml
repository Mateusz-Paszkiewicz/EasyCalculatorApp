<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="208dp"
        android:layout_height="60pt"
        android:layout_margin="4dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="169dp"
        android:layout_height="80pt"
        android:layout_margin="16dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="66sp"
        android:gravity="bottom|right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/solution_tv">

    </TextView>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="170pt"
        android:layout_height="match_parent"
        android:background="#96949A"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingVertical="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/solution_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="@color/purple_500"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="("
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="@color/purple_200"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_close_bracket"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text=")"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="@color/purple_200"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="#BC3030"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="#BC3030"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="#BC3030"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="#BC3030"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_clear"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="@color/purple_500"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="."
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="@color/purple_200"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equal"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="="
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="#BC3030"
                app:cornerRadius="36dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>